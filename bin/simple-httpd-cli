#!/bin/sh
:;#-*-Emacs-Lisp-*-

:;test -n "$EMACS" || EMACS=emacs
:;test -n "$EASK_EMACS" && EMACS=$EASK_EMACS
:;exec "$EMACS" -batch -Q -l "$0" -- "$@"

;;; simple-httpd-cli --- A command-line interface for simple-httpd  -*- lexical-binding: t; -*-


;;; Commentary:
;;
;; The command-line interface.
;;

;;; Code:

(require 'simple-httpd-cli)
(require 'commander)
(require 'pp)

(defvar simple-httpd-root default-directory)
(defvar simple-httpd-host "localhost")
(defvar simple-httpd-port httpd-port)
(defvar simple-httpd-ip-family httpd-ip-family)

(defun simple-httpd-cli--set-host (arg)
  "Set the host."
  (setq simple-httpd-host arg))

(defun simple-httpd-cli--set-port (arg)
  "Set the port."
  (setq simple-httpd-port (string-to-number arg)))

(defun simple-httpd-cli--set-ip-family (arg)
  "Set the IP family."
  (setq simple-httpd-ip-family arg))

(defun simple-httpd-cli--run (&rest args)
  "Run the simple http server."
  (simple-httpd-cli-start (or (car args) simple-httpd-root)
                          simple-httpd-host
                          simple-httpd-port
                          simple-httpd-ip-family))

(commander
 (name "simple-httpd-cli")
 (description "A command-line interface for simple-httpd")
 (default simple-httpd-cli--run)
 (option "--help, -h" "Show usage information and exit" commander-print-usage-and-exit)

 (command "run [path]"
          "Translate the text and output to standard output."
          simple-httpd-cli--run)

 (option "--host <host>, -h <host>"
         simple-httpd-cli--set-host)
 (option "--port <port>, -p <port>"
         simple-httpd-cli--set-port)
 (option "--ip-family <ip-family>"
         simple-httpd-cli--set-ip-family))

;;; simple-httpd-cli ends here
